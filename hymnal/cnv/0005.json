{
  "hymn_number": 5,
  "starts_on": "stanza-1",
  "chorus": [
    "പാടി സ്തുതിക്കും ഞാന്‍ പാടിസ്തുതിക്കും",
    "സ്തോത്രഗീതം പാടി സ്തുതിക്കും"
  ],
  "stanzas": [
    {
      "stanza_number": 1,
      "lines": [
        "ദൈവ സന്നിധ ഞാന്‍ സ്തോത്രം പാടിടും",
        "ദൈവം നല്കിയ നന്മകള്‍ക്കായ്‌",
        "ദൈവം ഏകി തന്‍ സൂനുവെ പാപിയെനിക്കായ്‌",
        "ഹല്ലേലൂയ ഗീതം പാടും ഞാന്‍"
      ]
    },
    {
      "stanza_number": 2,
      "lines": [
        "അന്ധകാരമെന്‍ അന്തരംഗത്തെ",
        "ബന്ധനം ചെയ്തടിമയാക്കി",
        "ബന്ധുരാഭനാം തന്‍ സ്വന്തപുര്തനാല്‍",
        "ബന്ധനങ്ങളഴിച്ചുവല്ലോ-"
      ]
    },
    {
      "stanza_number": 3,
      "lines": [
        "ശ്രതുവാമെന്നെ പുര്തനാക്കുവാന്‍",
        "പുരതനെ കുരിശിലേല്‍പിച്ചു",
        "പുര്തത്വം നല്കി ഹാ എത്ത സൌഭാഗ്യം",
        "സ്തോത്രഗീതം പാടി സ്തുതിക്കും"
      ]
    },
    {
      "stanza_number": 4,
      "lines": [
        "വിളിച്ചു എന്നെ വെളിച്ചമാക്കി",
        "വിളിച്ചവന്നായി ശോഭിപ്പാന്‍",
        "ഒളിവിതറും നല്‍ തെളിവചനം",
        "എളിയവനെങ്ങും ഘോഷിക്കും"
      ]
    }
  ]
}
