{
  "hymn_number": 3,
  "starts_on": "chorus",
  "chorus": [
    "ആശ്രയം ചിലര്‍ക്കു രഥത്തില്‍",
    "വിശ്രമം അശ്വബലത്തിലെന്‍",
    "ആശ്രയമെന്നും യേശുവിന്‍ ഭുജത്തില്‍",
    "ആരെ ഞാന്‍ ഭയപ്പെടും",
    "പാരില്‍ ആയുസ്സിന്‍ നാള്‍കളെല്ലാം"
  ],
  "stanzas": [
    {
      "stanza_number": 1,
      "lines": [
        "ദിവ്യസ്നേഹത്താല്‍ സ്നേഹിച്ചു എന്നെ",
        "നിത്യമായെന്നോടവന്‍ അരുളിയതാല്‍",
        "പ്രത്യാശയിന്‍ മനമെനിക്കേകിയവന്‍",
        "പുതുഗീതങ്ങള്‍ പാടിടും ഞാന്‍",
        "എന്നും സന്തോഷത്താല്‍ പാടീടുമേ (ആശ്രയം)"
      ]
    },
    {
      "stanza_number": 2,
      "lines": [
        "സ്വന്തമായി സ്നേഹിച്ച ബന്ധുജനങ്ങള്‍",
        "നൊമ്പരം തന്നീടുന്ന വേളകളില്‍",
        "ഇമ്പസ്വരത്താല്‍ സാന്ത്വനമേകി",
        "അന്തികേ വന്നിടും താന്‍",
        "ഞാന്‍ സന്തോഷത്താല്‍ പാടീടുമേ (ആശ്രയം)"
      ]
    }
  ]
}
