{
  "number": 7,
  "starts": "verse-1",
  "refrain": [
    "കൊയ്ത്തു കാലത്തില്‍ നാം സന്തോഷിച്ചും",
    "കറ്റകള്‍ ചുമന്നും കൊണ്ടു വന്നിടും"
  ],
  "verses": [
    {
      "number": 1,
      "lines": [
        "വിതച്ചീടുക നാം സ്വര്‍ഗ്ഗത്തിന്റെ വിത്താം",
        "ക്രിസ്തൻ സുവിശേഷം ഹൃദയങ്ങളില്‍",
        "ആത്മമാരി പെയ്യും ദൈവം കൃപ ചെയ്യും",
        "തരും കൊയ്ത്തിനേയും തക്ക കാലത്തില്‍"
      ]
    },
    {
      "number": 2,
      "lines": [
        "വിതച്ചീടുക നാം സ്നേഹത്തിന്‍ അദ്ധ്വാനം",
        "ഒരു നാളും വൃര്‍ത്ഥം അല്ല ആകയാല്‍",
        "എന്നും പ്രാര്‍ത്ഥിച്ചീടിന്‍ വേലയില്‍ നിന്നീടിന്‍",
        "വിത്തു നനച്ചീടിന്‍ കണ്ണുനീരിനാല്‍"
      ]
    },
    {
      "number": 3,
      "lines": [
        "വിതച്ചീടുക നാം തടസ്സം അനേകം",
        "സാത്താന്‍ കൊണ്ടെന്നാലും തന്‍ വൈരാഗ്യത്താല്‍",
        "തളര്‍ന്നു പോകാതെ സ്നേഹവും വിടാതെ",
        "നില്ക്ക ക്ഷീണിക്കാതെ ക്രിസ്തൻ ശക്തിയില്‍"
      ]
    },
    {
      "number": 4,
      "lines": [
        "വിതച്ചീടുക നാം ദിവ്യസമാധാനം",
        "മുളച്ചിടുവോളം ശുന്യദേശത്തില്‍",
        "മരുഭൂമി കാടും ഉത്സവം കൊണ്ടാടും",
        "പര്‍വ്വതങ്ങള്‍ പാടും ദൈവതേജസ്സില്‍"
      ]
    }
  ]
}
